        function fnResize() {
            var windowWidth = $(window).width();
            if (windowWidth > 500) {
                $(".sizeDown").show();
                $(".sizeUp").hide();
            } else {
                $(".sizeDown").hide();
                $(".sizeUp").show();
            }
        }





        function searchData() {
            var obj = new Object();
            var userName = $("#bookerName").val();
            var startDate = $("#startDate").val();
            obj.userName = userName;
            obj.startDate = startDate;
            $("#todayAppend").html("");
            $("#ingAppend").html("");
            $("#endAppend").html("");
            $.ajax({
                url: '/surf/admin',
                type: 'POST',
                dataType: 'JSON',
                data: obj,
                success: function (data) {
                    var todayIdx = 0;
                    var ingIdx = 0;
                    var endIdx = 0;
                    console.log(data);
                    if (data == null) {
                        var noList = '<td colspan="10">조회 결과가 없습니다.</td>';
                        $("#todayAppend").append(noList);
                    }
                    $(data.data).each(function (i) {
                        var __data = data.data[i];
                        if (__data.status == 9) { return; }
                        var listTemplate = "<tr>" + $("#listTemplate").html().trim() + "</tr>";
                        var listTemplateClone = $(listTemplate);
                        var _startDate = new Date(__data.startDate);

                        var today = new Date();
                        var diff = today - _startDate;
                        var currDay = 24 * 60 * 60 * 1000;
                        var days = parseInt(diff / currDay);
                        var isIng = (today < _startDate);
                        var isToday = today.toDateString() == _startDate.toDateString();

                        if (isIng) {
                            ingIdx++;
                            listTemplateClone.find(".numba").html(ingIdx);
                        } else if (isToday) {
                            todayIdx++;
                            listTemplateClone.find(".numba").html(todayIdx);
                        } else {
                            endIdx++;
                            listTemplateClone.find(".numba").html(endIdx);
                        }
                        if (__data.createDate > 0) __data.createDate.slice(0, 10);
                        listTemplateClone.find(".name").html(__data.userName);
                        listTemplateClone.find(".phone").html(__data.phone);
                        listTemplateClone.find(".recommender").html(__data.recommender);
                        listTemplateClone.find(".days").html(days + "일");
                        listTemplateClone.find(".startDate").html(__data.startDate.slice(0, 10));
                        listTemplateClone.find(".startTime").html(__data.startTime + "시");
                        listTemplateClone.find(".headCount").html(__data.headCount);
                        listTemplateClone.find(".roomType").html(__data.roomType);
                        listTemplateClone.find(".request").html(__data.request);
                        listTemplateClone.find(".createDate").html(new Date(__data.createDate).toLocaleDateString());
                        listTemplateClone.attr("data-id", __data.id);
                        listTemplateClone.attr("data-request", __data.request);
                        listTemplateClone.attr("data-date", new Date(__data.createDate).toLocaleDateString());

                        if (isToday) {
                            $("#todayAppend").append(listTemplateClone);
                        } else if (isIng) {
                            $("#ingAppend").append(listTemplateClone);
                        } else {
                            $("#append").append(listTemplateClone);
                        }

                        if (__data.status == 1) {
                            listTemplateClone.find(".name").css("background-color", "#e6dc75");
                        }

                        if (__data.status == 2) {
                            listTemplateClone.find(".name").html(__data.userName + "()");
                        }
                        if (__data.status == 3) {
                            listTemplateClone.find(".name").html(__data.userName + "()");
                        }


                        $(listTemplateClone).click(function () {
                            alert(`요청사항: ${$(this).attr('data-request')}` + "<br>" + `예약일자: ${$(this).attr('data-date')}` + `<br>` + `<input type='button' onclick='location.href="/surf/adjust?surfid=${listTemplateClone.attr('data-id')}"' class='btnAdjust' style='width:100px; height:30px;' value='예약수정'/>`);
                            //window.location.href = '/booking/admin/edit?bookingId=' + __data.bookingId;
                        });

                    });
                    fnResize();
                },
                error: function (data) {
                    alert(data);
                }
            });

        }

        $("#btnSearch").click(function () {
            searchData();
        });

        $("#btnReset").click(function () {
            $("input[type=text]").val("");
        });


        $(function () {
            searchData();

            $(window).resize(function () {
                fnResize();
            });


            $("#startDate").datepicker({
                onSelect: function (dateText) {
                    var yearmonth = dateText.slice(0, 8);
                    var nextDay = eval(Number(dateText.slice(8, 10)) + 7);
                    $("#endDate").datepicker("setDate", yearmonth + nextDay);
                }
            });
            $("#endDate").datepicker();

            $.datepicker.setDefaults({
                dateFormat: 'yy-mm-dd',
                prevText: '이전 달',
                nextText: '다음 달',
                monthNames: ['1월', '2월', '3월', '4월', '5월', '6월', '7월', '8월', '9월', '10월', '11월', '12월'],
