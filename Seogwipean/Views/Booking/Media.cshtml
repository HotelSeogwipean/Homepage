    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
    <meta property="og:type" content="website">
    <meta property="og:title" content="Hotel Seogwipean Web Site">
    <meta name="description" content="Hotel Seogwipean Web Site">
    <meta property="og:description" content="Hotel Seogwipean Web Site">
    <meta property="og:image" content="http://hotelseogwipean.com/images/logo.png">
    <meta property="og:url" content="http://hotelseogwipean.com/">
    <link rel="apple-touch-icon" sizes="57x57" href="/favicon/apple-icon-57x57.png">
    <link rel="apple-touch-icon" sizes="60x60" href="/favicon/apple-icon-60x60.png">
    <link rel="apple-touch-icon" sizes="72x72" href="/favicon/apple-icon-72x72.png">
    <link rel="apple-touch-icon" sizes="76x76" href="/favicon/apple-icon-76x76.png">
    <link rel="apple-touch-icon" sizes="114x114" href="/favicon/apple-icon-114x114.png">
    <link rel="apple-touch-icon" sizes="120x120" href="/favicon/apple-icon-120x120.png">
    <link rel="apple-touch-icon" sizes="144x144" href="/favicon/apple-icon-144x144.png">
    <link rel="apple-touch-icon" sizes="152x152" href="/favicon/apple-icon-152x152.png">
    <link rel="apple-touch-icon" sizes="180x180" href="/favicon/apple-icon-180x180.png">
    <link rel="icon" type="image/png" sizes="192x192" href="/favicon/android-icon-192x192.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="96x96" href="/favicon/favicon-96x96.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon/favicon-16x16.png">
    <meta name="msapplication-TileColor" content="#ffffff">
    <meta name="msapplication-TileImage" content="/ms-icon-144x144.png">
    <meta name="theme-color" content="#ffffff">
    <title>Hotel Seogwipean</title>
    <link href="~/css/jquery-ui.min.css" rel="stylesheet" />
    <link href="~/css/custom-alert.css" rel="stylesheet" />
    <link href="~/css/videojs.css" rel="stylesheet">
    <link href="~/css/RV-gallery.min.css" rel="stylesheet" />
    <link href="~/css/media.css" rel="stylesheet" />
</head>
<body>
    <div id="logo" align="center">
        <img src="~/images/logo.png" style="text-align:center;"/>
    </div>
    <div id="wrapper" align="center">
        <div class="pictureViewer">
            <div class="gallery">
                <img class="gallery-item" src="~/building/front.jpg">
                <img class="gallery-item" src="~/rooms/standardtwin.jpg">
                <img class="gallery-item" src="~/rooms/bathroom.jpg">
            </div>
        </div>
        <div class="videoPlayer">
            <video id='my-video' class='video-js' controls preload='auto' poster='/images/comingsoon.jpg' data-setup='{}' style="width: 100%;">
                <source src='~/video/hotel.mp4' type='video/mp4'>
                <p class='vjs-no-js'>
                    동영상이 재생되지 않는다면 크롬 브라우저를 통해 접근해주세요.
                    <a href='https://videojs.com/html5-video-support/' target='_blank'>supports HTML5 video</a>
                </p>
            </video>
        </div>
        <div class="btnBox">
            <input type="button" id="btnPicture" value="사진 보기" />
            <input type="button" id="btnPrev" value="시숙 예약하기" />
        </div>
    </div>
    <script src="~/lib/jquery-3.2.1.min.js"></script>
    <script src="~/lib/videojs-ie8.min.js"></script>
    <script src='~/lib/videojs.js'></script>
    <script src="~/lib/custom-alert.js"></script>
    <script src="~/lib/RV-gallery.min.js"></script>


    <script type="text/javascript">
        $(function () {
            $('.gallery').initGallery({
                nav: ["<span> < </span>", "<span> > </span>"],
                close: "<span>X</span>",
                aspectRatio: "auto",
                showDots: true,
                showNavIfOneItem: false,
                showNav: false,
                arrows: true,
                transition: "fade",
                fullScreen: true,
                autoplay: false
            });

            $(".close-button").click(function () {
                closeFullScreen();
            });

        });

        $("#btnPicture").click(function () {
            showFullScreen();
        });

        $("#btnPrev").click(function () {
            window.location.href = "/booking";
        });

        function showFullScreen()
        {
            $(".gallery").css("z-index", "99999");
            $(".gallery").find(".g_f-s-hidden").fadeIn(400);
            toggleView();
        }
        function closeFullScreen()
        {
            $(".gallery").find(".g_f-s-hidden").fadeOut(400, function () {
                $(".gallery").removeAttr("style")
            }.bind($(".gallery")));
            toggleView();
        }

        function toggleView() {
            var $pic = $(".pictureViewer");
            var $video = $(".videoPlayer");
            if ($pic.css("display") == "none") {
                $pic.show();
                $video.hide();
            } else {
                $pic.hide();
                $video.show();
            }
        }

    </script>
</body>
</html>
