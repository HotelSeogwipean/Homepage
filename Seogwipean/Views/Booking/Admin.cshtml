        function searchData() {
            var obj = new Object();
            var userName = $("#bookerName").val();
            var startDate = $("#startDate").val();
            var endDate = $("#endDate").val();
            obj.userName = userName;
            obj.startDate = startDate;
            obj.endDate = endDate;
            $("#append").html("");
            $("#todayAppend").html("");
            $("#appendEnd").html("");
            $.ajax({
                url: '/booking/admin',
                type: 'POST',
                dataType: 'JSON',
                data: obj,
                success: function (data) {
                    var idx = 0;
                    var endIdx = 0;
                    if (data.data.length < 1) {
                        var noList = '<td colspan="10">조회 결과가 없습니다.</td>';
                        $("#append").append(noList);
                    }
                    $(data.data).each(function (i) {
                        var __data = data.data[i];
                        if (__data.status == 9) { return; }


                        var listTemplate = "<tr>" + $("#listTemplate").html().trim() + "</tr>";
                        var listTemplateClone = $(listTemplate);
                        var _endDate = new Date(__data.endDate);
                        var _startDate = new Date(__data.startDate);

                        var diff = _endDate - _startDate;
                        var currDay = 24 * 60 * 60 * 1000;
                        var days = parseInt(diff / currDay);
                        var today = new Date();
                        var isCheckedOut = (today - _endDate) > 0;
                        if (!isCheckedOut) {
                            idx++;
                            listTemplateClone.find(".numba").html(idx);
                        } else {
                            endIdx++;
                            listTemplateClone.find(".numba").html(endIdx);
                        }

                        listTemplateClone.find(".name").html(__data.userName);
                        listTemplateClone.find(".phone").html(__data.phone);
                        listTemplateClone.find(".recommender").html(__data.recommender);
                        listTemplateClone.find(".days").html(days + "일");
                        listTemplateClone.find(".startDate").html(__data.startDate.slice(0, 10));
                        listTemplateClone.find(".endDate").html(__data.endDate.slice(0, 10));
                        listTemplateClone.find(".headCount").html(__data.headCount);
                        listTemplateClone.find(".roomType").html(__data.roomType);
                        listTemplateClone.find(".request").html(__data.request);
                        listTemplateClone.find(".createDate").html(__data.createDate.slice(0, 10));

                        if (isCheckedOut) {
                            $("#appendEnd").append(listTemplateClone);
                        } else if (_startDate.getMonth() == today.getMonth() && _startDate.getDate() == today.getDate()) {
                            $("#todayAppend").append(listTemplateClone);
                        } else {
                            $("#append").append(listTemplateClone);
                        }

                        if (__data.status == 1) {
                            listTemplateClone.find(".name").css("background-color", "#e6dc75");
                        }

                        if (__data.status == 2) {
                            listTemplateClone.find(".name").html(__data.userName +"(체크인)");
                        }
                        if (__data.status == 3) {
                            listTemplateClone.find(".name").html(__data.userName +"(체크아웃)");
                        }


                        $(listTemplateClone).dblclick(function () {
                            window.location.href = '/booking/admin/edit?bookingId=' + __data.bookingId;
                        });

                    });
                },
                error: function (data) {
                    alert(data);
                }
            });

        }

        $("#btnSearch").click(function () {
            searchData();
        });

        $("#btnReset").click(function () {
            $("input[type=text]").val("");
        });

        $(function () {
            searchData();

            $("#startDate").datepicker({
                onSelect: function (dateText) {
                    var yearmonth = dateText.slice(0, 8);
                    var nextDay = eval(Number(dateText.slice(8, 10)) + 7);
                    $("#endDate").datepicker("setDate", yearmonth + nextDay);
                }
            });
            $("#endDate").datepicker();

            $.datepicker.setDefaults({
                dateFormat: 'yy-mm-dd',
                prevText: '이전 달',
                nextText: '다음 달',
                monthNames: ['1월', '2월', '3월', '4월', '5월', '6월', '7월', '8월', '9월', '10월', '11월', '12월'],
