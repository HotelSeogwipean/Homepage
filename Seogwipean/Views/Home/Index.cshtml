<!------------------------ 메인 종료 ------------------------>

@section EndBody{
    <script src="~/lib/html5lightbox.js"></script>
    <script src="~/lib/jquery.cookie.js"></script>
    <script type="text/javascript" charset="utf-8" src="~/lib/wings.booking.js"></script>
    <script type="text/javascript">
        var backgroundCnt = 0;
        $(function () {
            $(".logo img").attr("src", "../images/whiteLogo.png");
            $("#instaBtn").attr("src", "../images/whiteInsta.png");
            $("#faceBtn").attr("src", "../images/whiteFace.png");
            fnRepeat();
            $("#seogwipean").fadeOut(5000);

            wscv.set({ "hotelId": "SGP1", "theme": "theme01", "type": "horizontal" });
            wscv.create(".wings-fast-book", { lang: 'ko' });

            var $pop = $.cookie("popup");
            if ($pop != "yes") {
                $("#videoPop").show();
            } else {
                $("#videoPop").remove();
            }
        });

        $('#videoX').click(function () {
            if ($("#videoChkBox input:checked").length > 0) {
                $.cookie("popup", "yes", { expires: 7 });
            }
            $("#videoPop").remove();
        });

        function fnRepeat() {
            setTimeout(function () {
                fnRepeat();
            }, 4000);
            var $img1 = $("#img1").attr("src");
            var $img2 = $("#img2").attr("src");
            var $img3 = $("#img3").attr("src");
            var $img4 = $("#img4").attr("src");
            if (screen.width <= 425) {
                switch (backgroundCnt) {
                    case 0: { $("body").css("background", `url(${$img1}) 35% 0 no-repeat`); break; }
                    case 1: { $("body").css("background", `url(${$img2}) 25% 20% no-repeat`); break; }
                    case 2: { $("body").css("background", `url(${$img3}) 0 20% no-repeat`); break; }
                    case 3: { $("body").css("background", `url(${$img4}) 28% 20% no-repeat`); backgroundCnt = 0; break; }
                }
            } else {
                switch (backgroundCnt) {
                    case 0: { $("body").css("background", `url(${$img1}) 0 40% no-repeat`); break; }
                    case 1: { $("body").css("background", `url(${$img2}) 0 35% no-repeat`); break; }
                    case 2: { $("body").css("background", `url(${$img3}) 0 30% no-repeat`); break; }
                    case 3: { $("body").css("background", `url(${$img4}) 0 25% no-repeat`); backgroundCnt = 0; break; }
                }
            }
            backgroundCnt++;
            $("body").css("background-size", "cover");
        }

    </script>
}