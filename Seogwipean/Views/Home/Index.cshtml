@section EndBody{
    <script src="~/lib/fullclip.min.js" type="text/javascript"></script>
    <script type="text/javascript">
        // 사진 사이즈 재조정
        $(window).on('load', function () {
            var $width = window.innerWidth;
            var $height = screen.height - 220;

            if (window.screen < 780) {
                $("section.container").css("width", $width).css("height", "auto");
            } else {
                $("section.container").css("width", $width).css("height", $height);
            }
        });

        $('.fullBackground').fullClip({
            images: ['../building/day5.jpg', '../building/day2.jpg', '../building/day3.jpg', '../building/night2.jpg', '../building/night3.jpg' ],
            transitionTime: 2000,
            wait: 3000
        });
    </script>
}