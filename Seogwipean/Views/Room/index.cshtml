            <div class="slide" slide="1" annot="">
                <img src="~/images/logo.png" alt="Slide 1">
            </div>
            <div class="counter" count="5"> / 5</div>
        </div>

    </div>

    <script type="text/javascript">
        $(".show-more").click(function () {
            $(".show-less").show(); $(this).hide();
            $(this).parents(".post-repeat").find(".more-content").slideDown();
        });
        $(".show-less").click(function () {
            $(".show-more").show(); $(this).hide();
            $(this).parents(".post-repeat").find(".more-content").slideUp();
        });

        $(".post img").click(function (e) {
            e.preventDefault();
        });

        function openDetail() {
            var url = '/room/detail';
            var option = 'width=800, height=800, top=100, scrollbars, resizeable, toolbar = no';
            var win = window.open(url, "_blank", option);
        }

        function toggleDetail() {
            if ($("section.wrapper").css("display") === "none") {
                $("section.wrapper, header, footer").show();
                $(".room-detail").hide();
                return;
            }
            $("section.wrapper, header, footer").hide();
            $(".room-detail").show();
        }

        $(".rooms-gallery, .exitBtn").click(function (e) {
            var parents = $(this).parents(".post-repeat");
            toggleDetail();
        });


    </script>
}