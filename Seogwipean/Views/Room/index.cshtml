@section EndBody{
    <div class="room-detail detailCarousel">
        <div class="exitBtn">
            <a href="#" class="close"></a>
        </div>
        <div class="intro">
            <h1 class="intro__title">스탠다드 퀸</h1>
            @*<p class="intro__body">추가 삽입 내용</p>*@
        </div>
        <div class="carousel" id="moreImages">
        </div>
    </div>
    <script src="~/lib/RV-gallery.min.js"></script>
    <script type="text/javascript">
        // 상세정보 클릭시
        $(".show-more").click(function () {
            $(this).parent().find(".show-less").show();
            $(this).hide();
            $(this).parents(".post-repeat").find(".more-content").slideDown();
        });
        // 줄이기 클릭시
        $(".show-less").click(function () {
            $(this).parent().find(".show-more").show();
            $(this).hide();
            $(this).parents(".post-repeat").find(".more-content").slideUp();
        });

        $(".post img").click(function (e) {
            e.preventDefault();
        });

        function addImage(_url1, _url2, _url3, _url4, _url5) {
            $("#moreImages").html("");
            if (_url1 != undefined)
                counter = 1;
            if (_url2 != undefined)
                counter = 2;
            if (_url3 != undefined)
                counter = 3;
            if (_url4 != undefined)
                counter = 4;
            if (_url5 != undefined)
                counter = 5;
            if (_url5 != null || _url5 != undefined) {
                var listTemplateClone = '<input type="checkbox" class="faux-ui-facia"><div class="slide" slide="5" annot="&nbsp;"><img src="'+_url5+'" alt="Slide 5"></div>';
                $("#moreImages").append(listTemplateClone);
            }  if (_url4 != null || _url4 != undefined) {
                var listTemplateClone = '<input type="checkbox" class="faux-ui-facia"><div class="slide" slide="4" annot="&nbsp;"><img src="' + _url4 + '" alt="Slide 4"></div>';
                $("#moreImages").append(listTemplateClone);
            }  if (_url3 != null || _url3 != undefined) {
                var listTemplateClone = '<input type="checkbox" class="faux-ui-facia"><div class="slide" slide="3" annot="&nbsp;"><img src="' + _url3 + '" alt="Slide 3"></div>';
                $("#moreImages").append(listTemplateClone);
            }  if (_url2 != null || _url2 != undefined) {
                var listTemplateClone = '<input type="checkbox" class="faux-ui-facia"><div class="slide" slide="2" annot="&nbsp;"><img src="' + _url2 + '" alt="Slide 2"></div>';
                $("#moreImages").append(listTemplateClone);
            }  if (_url1 != null || _url1 != undefined) {
                var listTemplateClone = '<input type="checkbox" class="faux-ui-facia"><div class="slide" slide="1" annot="&nbsp;"><img src="' + _url1 + '" alt="Slide 1"></div>';
                console.log(listTemplateClone);
                $("#moreImages").append(listTemplateClone);
            }
            var _counter = '<div class="counter" count="' + counter + '"> / ' + counter +'</div>';
            $("#moreImages").append(_counter);
        }

        function toggleDetail(title) {
            if ($("section.wrapper").css("display") === "none") {
                $("section.wrapper, header, footer").show();
                $(".room-detail").hide();
                return;
            }
            $("section.wrapper, header, footer").hide();

            switch (title) {
                case "standard": {
                    addImage("../rooms/standard1.jpg");
                    $(".intro__title").html("스탠다드 오션뷰");
                    break;
                }
                case "twin": {
                    addImage("../rooms/twin1.jpg");
                    $(".intro__title").html("스탠다드 트윈 오션뷰");
                    break;
                }
                case "deluxe": {
                    addImage("../rooms/deluxe2.jpg", "../rooms/deluxe3.jpg");
                    $(".intro__title").html("디럭스 오션뷰");
                    break;
                }
                case "ondol": {
                    addImage("../images/notready.png");
                    $(".intro__title").html("온돌 오션뷰");
                    break;
                }
            }

            $(".room-detail").show();
        }

        $(".rooms-gallery").click(function (e) {
            var _title = $(this).attr("title");
            var parents = $(this).parents(".post-repeat");
            toggleDetail(_title);
        });

        $(".exitBtn").click(function (e) {
            var parents = $(this).parents(".post-repeat");
            toggleDetail();
        });

    </script>
