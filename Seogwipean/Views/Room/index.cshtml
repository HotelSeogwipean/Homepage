@section EndBody{
    <div class="room-detail detailCarousel">
        <div class="exitBtn">
            <a href="#" class="close"></a>
        </div>
        <div class="intro">
            <h1 class="intro__title">스탠다드 퀸</h1>
            <p class="intro__body">추가 삽입 내용</p>
        </div>

        <div class="carousel">
            <input type="checkbox" class="faux-ui-facia">
            <div class="slide" slide="5" annot=".">
                <img src="~/images/1.jpg" alt="Slide 5">
            </div>
            <input type="checkbox" class="faux-ui-facia">
            <div class="slide" slide="4" annot=".">
                <img src="~/images/2.jpg" alt="Slide 4">
            </div>
